# ==============================
# HirePro Starter - Example .env
# ==============================
# Copy this file to .env (for local dev) or add these variables in Vercel Project Settings.

# Telegram bot (used by /bot only, optional)
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_OWNER_ID=123456789
TELEGRAM_GROUP_ID=-1001234567890

# Optional overrides
# For Vercel, omit DATABASE_PATH (it will default to /tmp/app.db which is ephemeral).
# For local/VPS, point this to an absolute path that is writable.
DATABASE_PATH=/absolute/path/to/data/app.db

# CORS origin for API responses (e.g., form postbacks)
WEB_ORIGIN=http://localhost:3000

# Exposed to the browser (NEXT_PUBLIC_ prefix is required by Next.js)
NEXT_PUBLIC_BOT_USERNAME=your_bot_username
